{
  "name": "countries-dashboard",
  "version": "0.1.0",
  "private": true,
  "description": "A Countries Dashboard built with Next.js and TypeScript.",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:newrelic": "NODE_ENV=production node server.js",
    "dev:newrelic": "node server.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --project tsconfig.test.json --noEmit",
    "ci:check": "npm run lint:fix && npm test",
    "test": "jest",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:coverage:no-threshold": "jest --coverage --passWithNoTests --coverageThreshold=\"{}\"",
    "test:coverage:ci": "jest --coverage --coverageReporters='json-summary'",
    "test:watch": "jest --watch",
    "setup:e2e": "npx playwright install --with-deps",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@auth/core": "^0.34.2",
    "@tanstack/react-query": "^5.75.7",
    "@tanstack/react-query-devtools": "^5.75.7",
    "axios": "^1.9.0",
    "lucide-react": "^0.509.0",
    "newrelic": "^12.18.2",
    "next": "13.4.24",
    "next-auth": "^4.24.11",
    "openai": "^4.98.0",
    "posthog-js": "^1.240.5",
    "posthog-node": "^4.17.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@storybook/addon-essentials": "^7.6.11",
    "@storybook/addon-interactions": "^7.6.11",
    "@storybook/jest": "^0.2.3",
    "@storybook/nextjs": "^7.6.11",
    "@storybook/react": "^7.6.11",
    "@storybook/testing-react": "^1.3.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.48.0",
    "eslint-config-next": "13.4.24",
    "husky": "^8.0.3",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.32",
    "prettier": "^2.8.8",
    "storybook": "^7.6.11",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.3.2",
    "typescript": "~5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
