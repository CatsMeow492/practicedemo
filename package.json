{
  "name": "countries-dashboard",
  "version": "0.1.0",
  "private": true,
  "description": "A Countries Dashboard built with Next.js and TypeScript.",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "next": "13.4.19",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.3",
    "eslint": "^8.48.0",
    "eslint-config-next": "13.4.19",
    "husky": "^8.0.3",
    "jest": "^29.6.0",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "typescript": "~5.2.2",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.7",
    "@types/node": "^20.8.10",
    "@storybook/react": "^7.6.11",
    "storybook": "^7.6.11",
    "@storybook/addon-essentials": "^7.6.11",
    "@storybook/addon-interactions": "^7.6.11",
    "@storybook/testing-react": "^1.3.0",
    "@storybook/jest": "^0.0.11",
    "@storybook/nextjs": "^7.6.11",
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.15"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
} 